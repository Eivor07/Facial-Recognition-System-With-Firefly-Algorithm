   "source": [
    "# ðŸ”¥ Face Recognition Optimized by Firefly Algorithm\n",
    "This notebook implements a facial recognition system using PCA and SVM, and optimizes feature selection using the Firefly Algorithm (FA)."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# ðŸ“¦ Import Libraries\n",
    "import numpy as np\n",
    "from sklearn.datasets import fetch_lfw_people\n",
    "from sklearn.model_selection import train_test_split\n",
    "from sklearn.decomposition import PCA\n",
    "from sklearn.svm import SVC\n",
    "from sklearn.metrics import accuracy_score"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# ðŸ”¥ Firefly Algorithm\n",
    "def firefly_algorithm(X_train, y_train, X_val, y_val, n_fireflies=10, max_iter=20, alpha=0.5, beta0=1, gamma=1):\n",
    "    n_features = X_train.shape[1]\n",
    "    fireflies = np.random.rand(n_fireflies, n_features)\n",
    "    fireflies = (fireflies > 0.5).astype(int)  # Binary feature mask\n",
    "\n",
    "    def fitness(mask):\n",
    "        if np.count_nonzero(mask) == 0:\n",
    "            return 0\n",
    "        Xf_train = X_train[:, mask == 1]\n",
    "        Xf_val = X_val[:, mask == 1]\n",
    "        model = SVC(kernel='linear')\n",
    "        model.fit(Xf_train, y_train)\n",
    "        pred = model.predict(Xf_val)\n",
    "        return accuracy_score(y_val, pred)\n",
    "\n",
    "    brightness = np.array([fitness(f) for f in fireflies])\n",
    "\n",
    "    for t in range(max_iter):\n",
    "        for i in range(n_fireflies):\n",
    "            for j in range(n_fireflies):\n",
    "                if brightness[j] > brightness[i]:\n",
    "                    r = np.linalg.norm(fireflies[i] - fireflies[j])\n",
    "                    beta = beta0 * np.exp(-gamma * r ** 2)\n",
    "                    step = alpha * (np.random.rand(n_features) - 0.5)\n",
    "                    fireflies[i] = fireflies[i] + beta * (fireflies[j] - fireflies[i]) + step\n",
    "                    fireflies[i] = np.clip(fireflies[i], 0, 1)\n",
    "                    fireflies[i] = (fireflies[i] > 0.5).astype(int)\n",
    "                    brightness[i] = fitness(fireflies[i])\n",
    "\n",
    "    best_idx = np.argmax(brightness)\n",
    "    return fireflies[best_idx], brightness[best_idx]"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# ðŸ“‚ Load and Preprocess Data\n",
    "lfw = fetch_lfw_people(min_faces_per_person=50, resize=0.4)\n",
    "X = lfw.data\n",
    "y = lfw.target\n",
    "\n",
    "# Dimensionality Reduction\n",
    "pca = PCA(n_components=100, whiten=True)\n",
    "X_pca = pca.fit_transform(X)\n",
    "\n",
    "# Train-Test Split\n",
    "X_train, X_test, y_train, y_test = train_test_split(X_pca, y, test_size=0.25, random_state=42)\n",
    "X_train_fa, X_val_fa, y_train_fa, y_val_fa = train_test_split(X_train, y_train, test_size=0.2)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# ðŸš€ Run Firefly Algorithm\n",
    "best_mask, best_acc = firefly_algorithm(X_train_fa, y_train_fa, X_val_fa, y_val_fa)\n",
    "print(f"Best Feature Mask: {np.count_nonzero(best_mask)} features selected, Accuracy: {best_acc:.2f}")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# ðŸ§  Final Model Evaluation\n",
    "X_train_final = X_train[:, best_mask == 1]\n",
    "X_test_final = X_test[:, best_mask == 1]\n",
    "\n",
    "final_model = SVC(kernel='linear')\n",
    "final_model.fit(X_train_final, y_train)\n",
    "y_pred = final_model.predict(X_test_final)\n",
    "print(f"Test Accuracy with optimized features: {accuracy_score(y_test, y_pred):.2f}")"
   ]
  }
